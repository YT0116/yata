/*/////////引导气泡 START//////////*/
.instruct {
  /* display: none; */
  z-index: 1000;
  position: absolute;
  left: 30%;
  top: 80rpx;
  font-size: 25rpx;
  color: white;
  height: 50rpx;
  line-height: 50rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  background-color: rgb(61, 61, 61);
  border: none;
  border-radius: 25px;
}
.instruct:after {
  content: '';
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  /*top: -11rpx;*/
  bottom: -8rpx;
  left: 20rpx;
  transform: rotate(45deg);
  background-color: rgb(61, 61, 61);
  border: none;
}

