<!--pages/telbook/detail/branch.wxml-->
<view class="fill-whole">


 <view class="tr" style="margin-top:20rpx">
  <view class="td"><image class='img' style="height:90rpx;" src="/image/branch.png" mode='aspectFit'></image></view>
  <view class="text">{{mName}} ({{nums}})</view>
 </view>
 <view class="divline"></view>


<!--////////没有子部门，直接显示成员////////////-->
<checkbox-group 
wx:if='{{!bumen.hasChild}}'  
wx:for='{{bumen.child[0]}}' 
wx:for-item="item2" 
data-id="{{item2.id}}"
style="width:100%"
bindchange="checkboxChange">
  <view class="tr">
  <view class="td" style="margin-left:13%"><checkbox wx:if='{{!isRead}}' value="{{item2.name}},{{item2.institute}},{{item2.tel}}"></checkbox></view>
  <image class='uimg' style="height:90rpx;opacity: 0.5" src="/image/users.png" mode='aspectFit'></image>
  <view class="data">
   <text>{{item2.name}}</text>  
   <view wx:if='{{item2.level==1||item2.level==2 || item2.level==3||item2.level==4||item2.level==5}}' class='tag' style="background-color:{{position[item2.level-1].color}}">{{position[item2.level-1].text}}</view>
  </view>
  
  <image src='/image/arrow-r.png' style="margin-top:30rpx;" class='img-arrow' mode='widthFix'bindtap="viewcard" data-id="{{item2.id}}"></image>
 </view>
 <view class="divline"></view>
</checkbox-group>

<!--////////有子部门，只显示子部门名，要点击才显示详细名单////////////-->
 <view bindtap="showList"
  wx:if='{{bumen.hasChild}}' 
  wx:for='{{bumen.child}}' 
  wx:for-item="item" 
  data-index="{{index}}"
  style="width:100%">
   <view class="tr">
    <view class="td" style="margin-left:13%"><image class='img' style="height:90rpx;opacity: 0.5" src="/image/branch.png" mode='aspectFit'></image></view>
    <view class="text">{{item.child.name}} ({{item.child.num}})</view> 
    <image src='/image/arrow-r.png' style="margin-top:30rpx;" class='img-arrow' mode='widthFix' ></image>
  </view>
 <view class="divline"></view>
  <!--////////点击显示的详细名单////////////-->

 <checkbox-group
  wx:if='{{item.child.showlist==true}}'
  wx:for='{{item.child.member}}' 
  wx:for-item="item3" 
  style="width:100%"
  data-id="{{item3.id}}"
  bindchange="checkboxChange"
  >
  <view class="tr">
  <view class="td" style="margin-left:13%"><checkbox wx:if='{{!isRead}}' value="{{item3.name}},{{item3.institute}},{{item3.tel}}"></checkbox></view>
  <image class='uimg' style="height:90rpx;opacity: 0.5" src="/image/users.png" mode='aspectFit'></image>
  <view class="data">
    <text>{{item3.name}}</text>  
    <view wx:if='{{item3.level==1 ||item3.level==2 || item3.level==3||item3.level==4}}' class='tag' style="background-color:{{position[item3.level-1].color}}">{{position[item3.level-1].text}}</view>
  </view> 
  <image src='/image/arrow-r.png' style="margin-top:30rpx;" class='img-arrow' mode='widthFix' bindtap="viewcard" data-id="{{item3.id}}"></image>
 </view>
 <view class="divline"></view>
</checkbox-group>

</view>

<view wx:if='{{!isRead}}' class="btn-area">
 <button form-type="reset" class="btn">清空</button>
 <button form-type="submit" type="primary" class="btn" bindtap="confirm">确定</button>
</view>


</view>
