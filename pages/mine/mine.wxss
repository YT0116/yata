/* pages/mine/mine.wxss */
page{
  height: 100%;
  background-color: #F2F2F2;
}
.container_1{
  margin: 30rpx;
}

.card{
  display:flex;
  flex-direction: column;
  height: 380rpx;
  background-color: #463D68;
  border-radius:15rpx; 
  align-items: center;
  justify-content: space-between;
}

.userInfo{
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
  justify-content: space-around;
}

.userinfo-avatar{
  overflow:hidden;  
  display: block;  
  width: 135rpx;  
  height: 135rpx;
  margin:auto;  
  border-radius: 50%;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}

open-data[type=userNickName]{
  margin: auto; 
  font-size: 80%; 
  color: #FFFFFF;
  padding-top: 10rpx;
}

.btn1{
  display: flex;
  justify-content: center;
  align-items: center;
  align-self:center; 
  width: 250rpx;
  height: 60rpx;
  border-radius:50rpx;
  font-size:80%;
  background-color: #09BB07;
  color: #FFFFFF;
  line-height: 40rpx;
  vertical-align: middle;
  text-align: center;
  margin-top:30rpx;
  
}

.menu{
  margin-top:30rpx; 
}

.bar{
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  box-shadow:0px 2px 0px #e4e1e1;
  margin-top: 25rpx;
  background-color: #FFFFFF;
  border-radius:15rpx; 
}

.bar_left{
  display: flex
}

.bar_right{
 display: flex
}

.icon{
  width: 40rpx;
  height: 40rpx;
  align-self: center;
  margin: 20rpx;
}

.icon_right{
  width: 40rpx;
  height: 40rpx;
  margin: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  align-self:center; 
}

.bar_text{
  align-self: center;
  font-size: 80%;
}

.userInfo_Join{
  width: 80%;
  height: 80%;
  display: flex;
  flex-direction:row; 
  justify-content: space-between;
  margin-top:65rpx; 
  
}

.card_left{
  width: 150rpx;
  height:150rpx;
 
}

.card_right{
  width: 68%;
  font-size: 80%;
  color: white;

  
}

.user_info_line{
  display: flex;
  flex-direction:row; 
  justify-content: space-between;
  margin-bottom:30rpx; 
}

.duty{
  width:100rpx;
  height: 50rpx;
  background-color: #09BB07;
  border-radius: 10%;
  text-align: center;
  border-radius:50rpx;
  
}

.user_text{
  margin-top:20rpx; 
}

