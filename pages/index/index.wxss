/* pages/index/index.wxss */
page{
  height: 100%;
  background-color: #F2F2F2;
}

.notifier_login{
  height: 90rpx;
  background-color:#B57BF4;
  color: #FFFFFF;
  display: flex;
  flex-direction:row;
  font-size: 80%;
  justify-content: space-between;
}

.login_left{
  display:flex;
  flex-direction:row;
  align-items: center;
  margin-left: 30rpx;
}

.login_right{
  display: flex;
  align-items: center;
  margin-right:10rpx; 
}

.body{
  padding: 30rpx;
}

.notifier_mission{
  display: flex;
  flex-direction: column;
  box-shadow:1px 2px 1px #c4c1c1;
  border-radius: 5%;
  background-color: #FFFFFF;
  height: 280rpx;
}

.mission_title{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 20rpx;
}

.mission_content{
  margin: 20rpx;
 
}

.misson_souce{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-left:30rpx;
  margin-right: 30rpx; 
  
}

btn1::after{ 
	border: none; 
}

.btn1{
  display: flex;
  justify-content: center;
  align-items: center;
  align-self:center; 
  width: 200rpx;
  height: 80rpx;
  border-radius:50rpx;
  font-size:80%;
  background-color: #09BB07;
  color: #FFFFFF;
  line-height: 40rpx;
  vertical-align: middle;
  text-align: center;
} 


.section{
  margin-top: 35rpx;
  
}
.section_title{
  height: 80rpx;
  display: flex;
  
}

.title_text{
  align-self: center;
  margin-left: 8rpx;
 
}

.section_content{
  height: 270rpx;
  width: auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
 
}

.scroll_box{
width: 100%;
height: 250rpx;
overflow: hidden;
white-space: nowrap;
}

.item_list{
width: 400rpx;
height: 200rpx;
margin-right: 23rpx;
display: inline-block;
background-color: #FFFFFF;
box-shadow:1px 2px 1px #c4c1c1;
border-radius: 10rpx;
}

.activities{
  display: flex;
  flex-direction: column;
  width: 200rpx;
  height: 250rpx;
  align-items: center;
  justify-content: center;
  box-shadow:1px 2px 1px #c4c1c1;
  border-radius: 10%;
  background-color: #FFFFFF
}


.act_text{
  color:#09BB07;
  font-size:80%;
  margin-bottom:30rpx; 
}

.act_hover{
   transform: scale(0.9,0.9)
}

.act_bot{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.icon{
  width: 25px; 
  height:25px;
  margin: 5rpx;
  align-self:center;
}

.icon_1{
  width: 35px; 
  height:35px;
  align-self:center;
}