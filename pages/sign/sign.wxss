/* pages/sign/sign.wxss */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 15%;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: black;
  font-size: 14px;
}
/*///////////////////////////////////////////////////////////*/
.sign-whole{
  display: flex;
  flex-direction: column;
  margin: auto;
  width: 85%;
}
/*////////    TABLE   用户填写信息      //////*/
.infor-table{
  align-self: center;
  font-size: 14px;
  height: 36%;
  vertical-align: middle;
  margin: auto;
  margin-top: 60rpx;
  width: 65%;
}
.tr{
  margin-top: 10rpx;
  display: flex;
  width: 100%;
  height: 50rpx;
  vertical-align: middle;
  text-align: left;
}
.td{
  color: grey;
  vertical-align: middle;
  height: 100%;
  margin-bottom: 0;
  margin-left: 10%;
  width: 40%;
  text-align: left;
}
.div-line{
  margin-top: 3rpx;
  height: 1rpx;
  width: 100%;
  border-bottom: 1rpx rgb(189, 186, 186) solid;
}
/*////////            按钮            ///////*/
.sign-button{
  line-height: 90rpx;
  height: 90rpx;
  color: white;
  vertical-align: middle;
  font-size: 14px;
  width: 100%;
  margin-top: 90rpx;
}
.hov{
  background-color: white;
}
/*   ////////  失败弹框   /////// */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.commodity_attr_box {
  width: 80%;
  overflow: hidden;
  position: fixed;
  top: 30%;
  left: 10%;
  z-index: 2000;
  background: #fff;
  padding-top: 40rpx;
  border-radius: 10rpx;
  text-align: center;
}

.title{
  text-align: center;
  font-size: 40rpx;
  width: 100%;
  margin-top: 30rpx;
}

.choice{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
  padding-bottom: 30rpx;
}

.item{
  display: flex;
  width: 70%;
  margin-left: 20rpx;
  margin-top: 20rpx;
  font-size: 32rpx;
  color: grey;
  text-align: left;
}

.confirm-btn{
  height: 90rpx;
  width: 180rpx;
  font-size:33rpx;
  color: green;
  line-height: 90rpx;
  vertical-align: middle;
  background-color: rgba(255, 255, 255,0);  /*透明按钮*/
  border: 0px white solid;
  border-radius: 0;
}
.confirm-btn:after{ 
    border: none; 
}

.confirm-btn:-moz-user-disabled{
  background-color: rgba(255, 255, 255,0);  /*透明按钮*/
}

.confirm-btn:disabled{
  background-color: white;  /*透明按钮*/
}
/* checkbox  */
/* 未选中的 背景样式 */
checkbox .wx-checkbox-input{
border-radius: 50%;/* 圆角 */
width: 35rpx; /* 背景的宽 */
height: 35rpx; /* 背景的高 */
margin-bottom:10rpx;
}

/* 选中后的样式 （可根据设计稿需求自己修改） */
checkbox .wx-checkbox-input.wx-checkbox-input-checked{
background: green;
border-color: green;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
border-radius: 50%;
width: 40rpx;
height: 40rpx;
line-height: 40rpx;
text-align: center;
font-size: 26rpx; /* 对勾大小 28rpx */
color: #fff; /* 对勾颜色 白色 */
background: transparent;
transform: translate(-50%, -50%) scale(1);
-webkit-transform: translate(-50%, -50%) scale(1);
}
