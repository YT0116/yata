/* pages/invite-scan/invite-scan.wxss */
.invite-whole{
  display: flex;
  height: 100%;
  flex-direction: column;
  margin: auto;
  width: 100%;
  text-align: center;
  align-items: center;
  align-content: center;
  justify-content: center;
}
.swiper-whole{
  display: flex;
  flex-direction: column;
  margin: auto;
  width: 90%;
  text-align: center;
  align-items: center;
  align-content: center;
  justify-content: center;
}

.lable{
  font-weight: bolder;
  font-size: 44rpx;
  margin-top: 10%;
}
.swiper{
  height: 620rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.erweima{
  height: 300rpx;
  width: 300rpx;
  margin-top: 50rpx;
}
.refresh{
    display: flex;
    width: 100%;
    color: grey;
    font-size:32rpx;
    margin-top:20rpx;
    margin-left: 63%;
    align-items: baseline;
    align-content: center;
}
.refresh-btn{
    font-size:32rpx;
    margin-left:0;
    background-color: rgba(255, 255, 255, 0);  /*透明按钮*/
    border: 0px white solid;
    color: blue;
}
.refresh-btn:after{ 
    border: none; 
}
.next-btn{
  line-height: 50rpx;
  height: 100rpx;
  color: white;
  vertical-align: middle;
  width: 80%;
  position: absolute;
  bottom: 10%;
  }

  .op-btn{
    width:90%;
    height: 90rpx;
    font-size: 36rpx;
    text-align: center;
    border-radius: 50rpx;
  }

  .switch-view{
  padding: 20rpx;
  line-height: 60rpx;
  vertical-align: middle;
  height: 60rpx;
  width: 90%;
  display: flex;
  justify-content: space-between; 
}

.switch-text{
  color: grey;
  font-size: 34rpx;
  font-weight: 550;
}

/*swtich样式-start*/
/*swtich整体大小*/
.wx-switch-input{
width:82rpx !important;
height:50rpx !important;
}
/*白色样式（false的样式）*/
.wx-switch-input::before{
width:80rpx !important;
height: 46rpx !important;
}
/*绿色样式（true的样式）*/
.wx-switch-input::after{
width: 40rpx !important;
height: 46rpx !important;
}
/*swtich样式end*/

.complete{
  position: fixed;
  bottom: 120rpx;
}

.tips{
  transform: scale(0.7,0.7);
  margin-bottom: 10rpx;
}

