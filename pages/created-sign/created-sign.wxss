/* pages/created-sign/created-sign.wxss */
page{
  background-color: #F5F5F5;
}

.cs-whole{
  display: flex;
  flex-direction: column;
  padding: auto;
  width: 100%;
  text-align: center;
  align-items: center;
  justify-content: space-around;
}
.cs-t{
  color: #999999;
  font-size: 28rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  text-align: left;
  width: 100%;
}
.cs-l{
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 30rpx;
  margin-left: 20rpx;
  text-align: left;
  width: 100%;
}
.cs-button{
  height: 85rpx;
  line-height: 85rpx;
  vertical-align: middle;
  width: 85%;
  margin-top: 30rpx;
}
.activity-card{
  background-color: white;
  display: flex;
  flex-direction: column;
  width: 90%;
  height: 240rpx;
  margin-top: 30rpx;
  border: 1px rgb(238, 238, 238) solid;
  border-radius: 10rpx;
}
.card-lable{
  height: 140rpx;
  width: 75%;
  border-bottom: 1px rgb(238, 238, 238) solid;
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
}
.card-lable-out{
  height: 140rpx;
  border-bottom: 1px rgb(238, 238, 238) solid;
  display: flex;
}
.img{
  margin-top: 58rpx;
  margin-left: 5rpx;
  width: 30rpx;
  height: 30rpx;
  opacity: 0.3;
}
.btns{
  display: flex;
  width: 100%;
  height: 100rpx;
}
.btn{
  height: 100rpx;
  font-size:32rpx;
  margin-top: 10rpx;
  background-color: rgba(255, 255, 255, 0);  /*透明按钮*/
  border: 0px white solid;
  border-radius: 0;
  color: green;
}
.btn:after{ 
    border: none; 
}

.arrow-text{
  color: green;
  font-size: 28rpx;
  width: 70rpx;
  height: 100%;
  line-height: 140rpx;
  vertical-align: middle;
}