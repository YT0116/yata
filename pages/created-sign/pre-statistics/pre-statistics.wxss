/* pages/created-sign/statistics/statistics.wxss */
page{
  background-color: #F5F5F5;
}
.sta-whole{
  display: flex;
  flex-direction: column;
  padding: auto;
  width: 100%;
  text-align: center;
  align-items: center;
}
.tar{
  width: 100%;
  display: flex;
}
.top-btn{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  vertical-align: middle;
  border-radius: 0;
  background-color: white;
  color: #797979;
  font-size: 32rpx;
  border: 0px white solid;
  border-top: 1rpx solid #E4E4E4;
}
.top-btn-selected{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  vertical-align: middle;
  border-radius: 0;
  font-size: 32rpx;
  background-color: #E4E4E4;
  color: black;
  border: 0px white solid;
}
.top-btn::after{
  border-radius: 0;
  border: none;
}
.top-btn-selected::after{
  border-radius: 0;
  border: none;
}
.bar{
  height: 70rpx;
  width: 100%;
  background-color: white;
  display: flex;
}
.sq{
  display: flex;
  flex-direction: column;
  width: 100%;
}
.card{
  height: 380rpx;
  width: 100%;
  margin-top: 20rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
}
.card2{
  height: auto;
  width: 100%;
  margin-top: 20rpx;
  background-color: white;
  display: flex;
  padding: 20rpx;
}
.title{
  font-size: 38rpx;
  font-weight: bold;
  width: 100%;
  margin-top: 0rpx;
  text-align: center;
}
.data-title{
  font-size: 33rpx;
  color: #adadad;
  width: 100%;
  margin-top: 35rpx;
  text-align: center;
}
.label{
  font-size: 29rpx;
  color: #797979;
}
.data{
  display: flex;
  height: 180rpx;
  margin-top: 30rpx;
  text-align: center;
}
.sum{
  width: 30%;
  height: 90%;
  margin-top: 10rpx;
  border-right: dashed 4rpx #adadad;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.sum-data{
  color: green;
  font-size: 60rpx;
}
.detail{
  display: flex;
  width: 70%;
  height: 90%;
}
.de-sum{
  width: 50%;
  height: 90%;
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.de-data1{
  font-size: 36rpx;
  color: plum;
  margin-left: 8rpx;
}
.de-data2{
  font-size: 36rpx;
  color: green;
  margin-left: 8rpx;
}
.de-data3{
  font-size: 36rpx;
  margin-left: 8rpx;
}
.time{
  font-size: 33rpx;
  color: #adadad;
  width: 100%;
  margin-top: 28rpx;
  margin-bottom: 20rpx;
  text-align: center;
  align-items: baseline;
}
.btn{
  height: 60rpx;
  width: 100rpx;
  padding: 0;
  font-size:28rpx;
  margin-top: 0rpx;
  background-color: rgba(255, 255, 255,0);  /*透明按钮*/
  border: 0px white solid;
  border-radius: 0;
  color: green;
  margin-left: 85%;
}
.btn:after{ 
    border: none; 
}
.bottom-btn{
  height: 90rpx;
  width: 88%;
  font-size: 36rpx;
  text-align: center;
}
.nav{
  height: 40rpx;
  width: 100%;
  margin-top: 35rpx;
  font-size: 34rpx;
  color: green;
}

.nav-hov{
  color: rgb(112, 138, 112);
  background-color: #F5F5F5;
}

.comment-btn{
  display: flex;
  flex-wrap: wrap;
  height: auto;
  justify-content: start;
  align-content: flex-start;
  width: 100%;
  margin-top: 50rpx;
  margin-left: 40rpx;
}

.btns{
  width: 130rpx;
  height: 50rpx;
  font-size: 31rpx;
  color: #c4c3c3;
  border: 1rpx solid #dcdcdc;
  background: #fff;
  vertical-align: middle;
  line-height: 50rpx;
  margin-left:0;
  margin-right: 30rpx; 
  }
.btns-selected{
  border: 1rpx solid green;
  background-color: green;
  color: white;
  }
.tags-part{
  width: 45%;
}

.tags{
  width: 70%;
  margin-left: 15%;
  margin-top: 15rpx;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}
.tag{
  width: 240rpx;
  font-size: 33rpx;
  color: #adadad;
  text-align: left;
}
.tags-text{
  color:black;
  font-size:28rpx;
  width:270rpx;
  text-align:left;
  margin-left: 17%;
}